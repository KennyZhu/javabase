<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yunnar.core.sns.dao.impl.SnsFollowDaoImpl">
    <resultMap id="result_map" type="com.yunnar.core.sns.model.SnsFollow">
        <id column="id" property="id" jdbcType="INTEGER"/>
        <result column="uid" property="uid" jdbcType="BIGINT"/>
        <result column="follow_uid" property="followUid" jdbcType="BIGINT"/>
        <result column="update_time" property="updateTime" jdbcType="TIMESTAMP"/>
        <result column="create_time" property="createTime" jdbcType="TIMESTAMP"/>
    </resultMap>
    <sql id="column_list">
        id,uid,follow_uid,update_time,create_time
    </sql>

    <insert id="insert" parameterType="com.yunnar.core.sns.model.SnsFollow">
        insert ignore into tb_sns_follow(uid,follow_uid,update_time,create_time)
        values(#{uid},#{followUid},now(),now())
    </insert>
    <delete id="delete" parameterType="java.lang.Integer">
        delete from tb_sns_follow where id=#{followId}
    </delete>
    <select id="getListByUid" parameterType="java.lang.Long" resultMap="result_map">
        select
        <include refid="column_list"/>
        from tb_sns_follow
        where uid = #{uid}
    </select>

    <delete id="deleteByUidFollowUid" parameterType="java.util.Map">
        delete from tb_sns_follow
        where uid=#{uid} and follow_uid=#{followUid}
    </delete>

    <select id="getTotalFollowedCountByUid" parameterType="java.lang.Long" resultType="java.lang.Integer">
        select count(1) from tb_sns_follow
        where uid = #{uid}
    </select>
    <select id="getFollowUidListByUid" parameterType="java.lang.Long" resultType="java.lang.Long">
        select follow_uid from tb_sns_follow where uid=#{uid}
    </select>


</mapper>