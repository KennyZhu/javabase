<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yunnar.core.trans.dao.impl.TransPriceDaoImpl">
    <resultMap id="result_map" type="com.yunnar.core.trans.model.TransPrice">
        <id column="Id" property="id" jdbcType="BIGINT"/>
        <result column="LineNo" property="lineNo" jdbcType="INTEGER"/>
        <result column="CarryCapacity" property="carryCapacity" jdbcType="VARCHAR"/>
        <result column="TransUnit" property="transUnit" jdbcType="BIGINT"/>
        <result column="TransPrice" property="transPrice" jdbcType="DOUBLE"/>
        <result column="CurrencyId" property="currencyId" jdbcType="BIGINT"/>
        <result column="Discount" property="discount" jdbcType="DOUBLE"/>
        <result column="FlightId" property="flightId" jdbcType="BIGINT"/>

    </resultMap>
    <sql id="column_list">
        Id,LineNo,CarryCapacity,TransUnit,TransPrice,CurrencyId,Discount,FlightId
    </sql>
    <select id="getListByFlightId" parameterType="java.lang.Long" resultMap="result_map">
        select
        <include refid="column_list" />
        from trans_price
        where FlightId = #{flightId}
    </select>


</mapper>